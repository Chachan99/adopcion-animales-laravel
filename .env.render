# Configuración para Render - AWS S3 Storage
# Copiar estas variables al dashboard de Render en Environment Variables

# Configuración de Base de Datos (ya configurada)
DB_CONNECTION=pgsql
DB_HOST=tu_host_postgresql
DB_PORT=5432
DB_DATABASE=tu_database_name
DB_USERNAME=tu_username
DB_PASSWORD=tu_password

# Configuración de Almacenamiento - AWS S3
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=tu_access_key_id_aqui
AWS_SECRET_ACCESS_KEY=tu_secret_access_key_aqui
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=tu_bucket_name_aqui
AWS_URL=https://tu_bucket_name_aqui.s3.amazonaws.com

# Otras configuraciones importantes
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu_app_url_en_render.com

# Configuración de sesión y cache
SESSION_DRIVER=database
CACHE_DRIVER=database
QUEUE_CONNECTION=database

# IMPORTANTE: 
# 1. Reemplazar todos los valores "tu_*" con los valores reales
# 2. Crear bucket S3 en AWS primero
# 3. Crear IAM user con permisos S3FullAccess
# 4. Agregar estas variables en Render Dashboard > Environment Variables
# 5. Hacer redeploy después de configurar las variables