<svg xmlns="http://www.w3.org/2000/svg" width="400" height="300" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="bgPet" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fef2f2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#fee2e2;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bgPet)"/>
  
  <!-- Lost pet silhouette -->
  <g transform="translate(200,150)">
    <!-- Pet body -->
    <ellipse cx="0" cy="10" rx="55" ry="30" fill="#f87171" opacity="0.6"/>
    
    <!-- Head -->
    <circle cx="0" cy="-20" r="25" fill="#f87171" opacity="0.6"/>
    
    <!-- Ears -->
    <ellipse cx="-18" cy="-38" rx="6" ry="12" fill="#f87171" opacity="0.6"/>
    <ellipse cx="18" cy="-38" rx="6" ry="12" fill="#f87171" opacity="0.6"/>
    
    <!-- Eyes (sad) -->
    <circle cx="-8" cy="-25" r="2" fill="#dc2626"/>
    <circle cx="8" cy="-25" r="2" fill="#dc2626"/>
    
    <!-- Nose -->
    <ellipse cx="0" cy="-15" rx="2" ry="1.5" fill="#dc2626"/>
    
    <!-- Legs -->
    <rect x="-40" y="30" width="6" height="18" fill="#f87171" opacity="0.6"/>
    <rect x="-22" y="30" width="6" height="18" fill="#f87171" opacity="0.6"/>
    <rect x="16" y="30" width="6" height="18" fill="#f87171" opacity="0.6"/>
    <rect x="34" y="30" width="6" height="18" fill="#f87171" opacity="0.6"/>
    
    <!-- Tail (drooping) -->
    <ellipse cx="50" cy="15" rx="4" ry="15" fill="#f87171" opacity="0.6" transform="rotate(45)"/>
  </g>
  
  <!-- Question mark -->
  <g transform="translate(320,80)">
    <circle cx="0" cy="0" r="20" fill="#ef4444" opacity="0.2"/>
    <text x="0" y="8" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="#dc2626" font-weight="bold">?</text>
  </g>
  
  <!-- Search icon -->
  <g transform="translate(80,80)">
    <circle cx="0" cy="0" r="8" fill="none" stroke="#ef4444" stroke-width="2" opacity="0.6"/>
    <line x1="6" y1="6" x2="12" y2="12" stroke="#ef4444" stroke-width="2" opacity="0.6"/>
  </g>
  
  <!-- Text -->
  <text x="200" y="220" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" fill="#dc2626" font-weight="600">
    Imagen no disponible
  </text>
  <text x="200" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#f87171">
    Mascota perdida
  </text>
</svg>